@model lyw.blueunion.backstagesystem.Model.Login.Login_AdminModel

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>电子联盟后台管理系统</title>


    <link href="@Url.Content("~/css/bootstrap.min.css?v=3.3.5")" rel="stylesheet" />
   
    <link href="@Url.Content("~/css/font-awesome.min.css?v=4.4.0")" rel="stylesheet" />
  
    <link href="@Url.Content("~/css/style.min.css?v=4.0.0")" rel="stylesheet" />
   
    <link href="@Url.Content("~/css/plugins/jasny/jasny-bootstrap.min.css")" rel="stylesheet" />
    <style>
         .middle-style {
         
    position: absolute;
  width:100%;
  height:100%;
    background-color: white;
  
    z-index: 1000;
            
        }
       .middle-style .sk-spinner {
           
           position: absolute;
        
            left: 50%;
            top: 50%;
         
        }
    </style>
    <link href="~/css/plugins/toast/animate.css" rel="stylesheet" />
    <link href="~/css/plugins/toast/toast.css" rel="stylesheet" />
    <!--[if IE]>
        <script src="http://libs.useso.com/js/html5shiv/3.7/html5shiv.min.js"></script>
    <![endif]-->
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/toast/toast.js")"></script>
    <script src="@Url.Content("~/Scripts_App/Utilities/Utilities.js")"></script>
    <script type="text/javascript">var rootUrl = "@Url.Content("~")";//获取根路径，防止iis部署位置不同</script>

    <script src="@Url.Content("~/Scripts_App/AccountManage/AccountManage.js")"></script>
    <script>
       
        $(function () {

            assignment();
        })
        function assignment() {
            if ('@Model.bl') {
                var User_name = '@Model.Admin_name';
                modifyguid = '@Model.Guid';
                var adminid = '@Model.Admin_id';

                $("#modifyadminname").val(User_name);

                $("#modifyadminid option[value='" + adminid + "']").attr("selected", "selected"); //根据值让option选中
            }
            else {
                alert('@Model.backmessage');
            }
          

        }
    </script>
</head>
<body class="gray-bg">
    <div class="spiner-example middle-style" style="opacity: 0.8; z-index: 1000;">
        <div class="sk-spinner sk-spinner-wave">
            <div class="sk-rect1"></div>
            <div class="sk-rect2"></div>
            <div class="sk-rect3"></div>
            <div class="sk-rect4"></div>
            <div class="sk-rect5"></div>
        </div>
    </div>

    <div class="wrapper wrapper-content animated toastdiv">


        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            修改注册信息
                        </h5>
                        <div class="ibox-tools">

                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-3 control-label">用户类型</label>

                                <div class="col-sm-6">
                                    <select disabled class="form-control m-b" name="Admin_id" id="modifyadminid">
                                        <option value="2">管理员</option>
                                        <option value="3">普通用户</option>

                                    </select>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">用户名</label>

                                <div class="col-sm-6">
                                    <input type="text" class="form-control" name="Admin_name" id="modifyadminname" />
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">新密码</label>
                                <div class="col-sm-6">
                                    <input type="password" class="form-control" name="Admin_password" id="modifyadpassword" />

                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">确认密码</label>

                                <div class="col-sm-6">
                                    <input type="password" class="form-control" name="password" id="modifyconfirmadpassword" />
                                </div>
                            </div>



                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <div class="col-sm-10 col-sm-offset-5">
                                    <button class="btn btn-primary modify-account-button" type="button">确认修改</button>
                                    <button class="btn btn-white preto-edit" type="button">返回</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>