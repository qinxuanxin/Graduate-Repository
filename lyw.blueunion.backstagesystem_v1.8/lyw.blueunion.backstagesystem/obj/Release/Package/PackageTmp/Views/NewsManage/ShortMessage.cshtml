<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <title>电子联盟后台管理系统</title>
  
    <link href="~/img/unionlogo.jpg" rel="shortcut icon" type="image/x-icon" />
    <link href="https://cdn.bootcss.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.staticfile.org/font-awesome/4.4.0/css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <link href="https://cdn.bootcss.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/css/style.min.css?v=4.1.0" rel="stylesheet">
    <style>
           .middle-style {
         
    position: absolute;
  width:100%;
  height:100%;
    background-color: white;
  
    z-index: 1000;
            
        }
       .middle-style .sk-spinner {
           
           position: absolute;
        
            left: 50%;
            top: 50%;
         
        }
    </style>
</head>

<body class="gray-bg">

    <div class="spiner-example middle-style" style="opacity: 0.8; z-index: 1000;">
        <div class="sk-spinner sk-spinner-wave">
            <div class="sk-rect1"></div>
            <div class="sk-rect2"></div>
            <div class="sk-rect3"></div>
            <div class="sk-rect4"></div>
            <div class="sk-rect5"></div>
        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
     
        <div class="row">
            <div class="col-sm-12">

                @*新建事件*@
                <div class="ibox float-e-margins new-event" style="display:none">
                    <div class="ibox-title">
                        <h5>
                            新建事件信息填写
                        </h5>
                        <div class="ibox-tools">

                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <form class="form-horizontal">

                            <div class="form-group">
                                <label class="col-sm-3 control-label">事件名称</label>

                                <div class="col-sm-6">
                                    <input type="text" class="form-control" name="event_name" id="event_name">
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">短信模板</label>

                                <div class="col-sm-6">
                                    <select class="form-control m-b" name="template_id" id="template_id">
                                        <option value="00">请选择短信模板</option>
                                      

                                    </select>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                           
                            <div class="form-group">
                                <label class="col-sm-6 control-label pre-message font-color-1"></label>
    
                            </div>
                            @*<div class="hr-line-dashed"></div>*@
                            <div class="form-group">
                                <div class="col-sm-10 col-sm-offset-5">
                                    <button class="btn btn-primary confirm-reg-button" type="button">确认</button>
                                    <button class="btn btn-white pre-button" type="button">返回</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                @*新建事件*@


                @*短信事件*@
                <div class="ibox event-info">
                    <div class="ibox-title">
                        <h5>短信事件</h5>
                        <div class="ibox-tools">
                            <a class="btn btn-primary btn-xs new-event-btn">新建事件</a>
                            @*<a href="projects.html" class="btn btn-primary btn-xs">编辑事件</a>*@
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="row m-b-sm m-t-sm">
                            <div class="col-md-1">
                                <button type="button" id="loading-example-btn" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i> 刷新</button>
                            </div>
                            <div class="col-md-11">
                                <div class="input-group">
                                    <input type="text" placeholder="请输入项目名称" class="input-sm form-control"> <span class="input-group-btn">
                                        <button type="button" class="btn btn-sm btn-primary"> 搜索</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div>
                            <span class="permessage-info"></span>
                        </div>
                        <div class="project-list">

                            <table class="table table-hover " id="table_list">
                              
                            </table>
                        </div>
                    </div>
                </div>
                @*短信事件*@
            </div>
        </div>

     
        
    </div>

    

    <script src="https://cdn.staticfile.org/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://cdn.bootcss.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  

    <script src="~/Scripts/content.min.js?v=1.0.0"></script>
    <script type="text/javascript">var rootUrl = "@Url.Content("~")";//获取根路径，防止iis部署位置不同</script>
    <script src="@Url.Content("~/Scripts_App/Utilities/Utilities.js")"></script>
    <script src="@Url.Content("~/Scripts_App/NewsManage/ShortMessage.js")"></script>

 

 

</body>

</html>
